class Solution {
    public int maxSubArray(int[] nums) {
        int n = nums.length ;
        if(n==1) return nums[0] ;
        int sum = 0 ;
        int max = Integer.MIN_VALUE ;
        for(int j=0;j<n;j++){
            sum += nums[j] ;
            max = Math.max(sum,max) ;
            if(sum<0) sum = 0 ;
        }
        return max ;
    }
}