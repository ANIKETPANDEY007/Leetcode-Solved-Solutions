
class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        int n = nums.length ;
        if(n==1 && nums[0]==0) return 0 ;
        int i = 0 ;
        int max = 0 ;
        for(int j = 0 ;j<n;j++){
            if(nums[j]==1 && nums[i]==1){
                max = Math.max(j-i+1,max) ;
            }else if(nums[j]==0){
                i = j ;
                i++ ;
            }
        }
        return max ;
    }
}